export PATH=$PATH:$HOME/dev/dotfiles/commands
PATH=$PATH:/usr/libexec/java_home
PATH=/usr/local/bin:$PATH
PATH=$HOME/bin:$PATH

# setup the environment variables in order to install ots

fpath=(~/.oh-my-zsh/completions $fpath)

export EDITOR="vim"
export GIT_EDITOR="vim"
export PGTZ=UTC 
#export RUBYOPT="--jit"
export RUBY_CONFIGURE_OPTS="--with-jemalloc"

# doesn't break when you use brackets
unsetopt nomatch

if which pyenv > /dev/null; then eval "$(pyenv init -)"; fi

if ssh-add -l | grep -q "SHA256"; then
    echo ssh identity found
else
    echo "Adding ssh identity..."
    ssh-add -k
fi
