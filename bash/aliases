


#rails
alias reload='source ~/.zshrc'
alias rc='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so bundle exec rails console'
alias rs='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so bundle exec rails server --port 5000'
alias sk='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start'
alias sk2='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=2'
alias sk3='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=3'
alias sk4='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=4'
alias sk5='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=5'
alias ss='./script/server'
alias sg='./script/generate'
alias rg='rails generate' 
alias r='bundle exec rake'
alias rr='rails release'
alias rdm='rails db:migrate' 

#adding aliases for bundle
alias be='bundle exec'
alias bi='bundle install'
alias bu='bundle update'

#rubygems
alias gi='gem install'
alias gup='gem update'
alias gu='gem uninstall'

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

#processes
alias tu='top -o cpu'
alias tm='top -o vsize'

# git
alias g="git status"
alias gl='git smart-log -n 30'
alias gpl='git smart-pull'
alias gps='git push'
alias gc='git commit'
alias gch='git checkout'
alias ga='git add'
alias gb='git branch'
alias gs='git stash'
alias gsp='git stash pop'
alias gm='git merge'
alias gr='git rebase'
alias gg='git grep'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias sh="show_history"
alias j="jump"
alias ea="edit_alias"
alias clipboard='DISPLAY=:0 xclip -sel clip'

alias deploy="cap production puma:stop && git push origin master && cap production deploy"
