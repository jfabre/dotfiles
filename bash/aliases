alias reload='source ~/.zshrc'

#rails
alias rc='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so bundle exec rails console'
alias rs='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so bundle exec rails server --port 5000'
alias sk='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start'
