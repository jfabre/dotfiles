alias deploy='cap production puma:stop && git push origin master && cap production deploy'
alias nvim='~/nvim-osx64/bin/nvim'
alias shopt='/Users/jeremy/dev/dotfiles/commands/shopt'

typeset -A projects
projects[nest]='handydev_service-nest-backend-server_1';
projects[partners]='handydev_service-partners-backend-server_1';
projects[handybook]='handydev_handybook-server_1';
projects[pp]='handydev_service-partnerportal-backend-server_1';
projects[admin]='handydev_service-admin-backend-server_1';

for k in "${(@k)projects}"; do

  de="de-$k"
  be="be-$k"
  rc="rc-$k"
  bi="bi-$k"
  logs="logs-$k"

  alias $de="docker exec -it $projects[$k]"
  alias $be="docker exec -it $projects[$k] bundle exec"
  alias $rc="docker exec -it $projects[$k] bundle exec rails console"
  alias $bi="docker exec -it $projects[$k] bundle install"
  alias $logs="docker logs $projects[$k] --tail 100 -f"
done

alias spec-nest='hdy run service-nest-backend-rspec'
alias spec-partners='hdy run service-partners-backend-rspec'
alias spec-handybook='hdy run handybook-rspec'
alias spec-pp='hdy run service-partnerportal-backend-rspec'
