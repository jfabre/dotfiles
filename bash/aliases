alias gpl='git smart-pull'
alias gps='git push'
alias gc='git commit'
alias gch='git checkout'
alias ga='git add'
alias gb='git branch'
alias gs='git stash'
alias gsp='git stash pop'
alias gm='git merge'
alias gr='git rebase'
alias gg='git grep'

alias ..='cd ..'
