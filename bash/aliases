alias sk3='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=3'
alias sk4='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=4'
alias sk5='LD_PRELOAD=/usr/lib/x86_64-linux-gnu/libjemalloc.so foreman start -m all=5'
alias ss='./script/server'
alias sg='./script/generate'
alias rg='rails generate'
alias r='bundle exec rake'
alias rr='rails release'
alias rdm='rails db:migrate'

